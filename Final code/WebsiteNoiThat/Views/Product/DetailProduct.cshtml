

@model  Models.EF.Product


<style>
    .zoom{transition:transform .2s;}
    .zoom:hover{transform: scale(1.1);}
</style>
@section Noidungbenphai{
    <table class="chitietsp">
        <h3 id="title_spmoi" style="text-align:center">@Model.Name.ToUpper()</h3>
        <br />
        <tr>
            <td rowspan="5">
                <img style="width:300px" id="zoom_04" class="zoom" src="@Url.Content("~/image/" + Model.Photo)" alt="image" />
            </td>
            <td>
                <h3>ID Product: @Model.ProductId</h3>
            </td>

        </tr>
        <tr>
            <td>
                <p class="status">Name Product: <span class="pink">@Model.Name</span></p>
            </td>
        </tr>
        <tr>
            @if (Model.Quantity > 0)
            {
                <td>
                    <p class="status">Staus: <span class="pink">have @Model.Quantity Product</span></p>
                </td>
            }
            else
            {
                <td>
                    <p class="status">Status: <span class="pink">Out of</span></p>
                </td>
            }
        </tr>
        <tr>
            <td>
                <p class="status">Price: <span class="pink">@string.Format("{0:#,###.##}", Model.Price)₫</span></p>
                @{
                    if (Model.Discount > 0)
                    {
                        <p class="status">Special price (@Model.Discount%): <span class="pink">@string.Format("{0:#,###.##}", (Model.Price - (Model.Price * Model.Discount * 0.01)))₫</span></p>
                    }
                }
                @*<p>Từ @Model.StartDate đến @Model.EndDate</p>*@
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <a style="font-family:unset;" href="/them-gio-hang?productid=@Model.ProductId&quantity=1" class="btn btn-primary fa fa-cart-plus"> Place an order</a>
                </div>
            </td>
        </tr>
    </table>
}
<hr>
<div class="row">

    <div class="short-des col-sm-12 col-xs-12">
        <ul class="nav nav-tabs" style="font-size:17px">
            <li class="nav active"><a href="#produc-des" data-toggle="tab"> Product Description</a></li>
